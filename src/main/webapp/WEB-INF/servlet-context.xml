<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" 
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
						http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
						http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<context:component-scan base-package="uk.bl.iiifimageservice" />
    
    <context:property-placeholder location="classpath:config.properties, file:${user.home}/config.properties" ignore-resource-not-found="true"/>

    <alias name="${file.location.strategy}" alias="fileLocationStrategyName"/>
    
	<mvc:annotation-driven>
		<mvc:async-support default-timeout="150000"> <!-- high for stepping thru code, was 3000 -->
			<mvc:callable-interceptors>
				<bean
					class="uk.bl.iiifimageservice.controller.TimeoutCallableProcessingInterceptor" />
			</mvc:callable-interceptors>
		</mvc:async-support>
	</mvc:annotation-driven>
	
</beans>